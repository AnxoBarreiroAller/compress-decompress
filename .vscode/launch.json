{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run compress release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Release/compress_decompress",
            "args": ["-h"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]

        },
        {
            "name": "run compress debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Debug/compress_decompress",
            "args": ["-compress",
                "-i",
                "/home/anxo/compress-decompress/out.bin",
                "-o",
                "/home/anxo/compress-decompress/compressed.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "run decompress debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Debug/compress_decompress",
            "args": ["-decompress",
                "-i",
                "/home/anxo/compress-decompress/compressed.bin",
                "-o",
                "/home/anxo/compress-decompress/decompressed.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}