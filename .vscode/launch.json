    "version": "0.2.0",
    "configurations": [
        {
            "name": "run compress release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/Release/compress_decompress",
            "args": ["-h"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]

        },
        {
        "name": "run compress debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/Debug/compress_decompress",
        "args": ["-h"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]

    }
    ]
}